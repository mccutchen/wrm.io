{
  "name": "flock",
  "version": "0.0.1",
  "description": "Yet another flocking implementation",
  "repository": "https://github.com/mccutchen/wrm.io",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "watch-js": "mkdir -p static/build && node_modules/.bin/watchify --full-paths static/js/main.js -o static/build/build.js -v --poll=500",
    "watch-css": "mkdir -p static/build && node_modules/.bin/node-sass --watch static/sass/main.scss > static/build/build.css",
    "build-js": "mkdir -p static/build && node_modules/.bin/browserify --full-paths static/js/main.js | node_modules/.bin/uglifyjs > static/build/build.js",
    "build-css": "mkdir -p static/build && node_modules/.bin/node-sass static/sass/main.scss > static/build/build.css",
    "build": "npm run build-js && npm run build-css",
    "lint": "node_modules/.bin/eslint ."
  },
  "author": "Will McCutchen <will@mccutch.org>",
  "devDependencies": {
    "babel-eslint": "4.0.5",
    "babelify": "6.1.3",
    "browserify": "11.0.1",
    "eslint": "1.0.0",
    "watchify": "3.3.1"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
